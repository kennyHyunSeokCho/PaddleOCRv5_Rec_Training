# PaddleOCR Recognition 모델 학습 환경 설정 파일
# 이 파일의 값들을 수정하여 학습 설정을 변경할 수 있습니다

# =====================================
# 기본 학습 설정
# =====================================

# 모델 아키텍처 (PP-OCRv5, PP-OCRv4, PP-OCRv3 등)
MODEL_VERSION=PP-OCRv5

# 언어 설정 (korean, english, chinese, multi_language 등)
LANGUAGE=korean

# 모델 크기 (mobile, server)
MODEL_SIZE=mobile

# =====================================
# 학습 데이터 설정
# =====================================

# 학습 데이터 디렉토리
TRAIN_DATA_DIR=./train_data

# 학습 이미지 리스트 파일 (ICDAR2015 스타일, 한국어용)
TRAIN_LABEL_FILE=./train_data/korean_data/rec_gt_train.txt

# 검증 이미지 리스트 파일
VAL_LABEL_FILE=./train_data/korean_data/rec_gt_test.txt

# =====================================
# 학습 하이퍼파라미터
# =====================================

# 총 학습 에폭 수 (PP-OCRv5 권장값: 75)
EPOCH_NUM=75

# 배치 사이즈 (PP-OCRv5 권장값: 128, GPU 메모리에 따라 조정)
BATCH_SIZE=128

# 학습률 (PP-OCRv5 권장값: 0.0005)
LEARNING_RATE=0.0005

# =====================================
# GPU 설정
# =====================================

# GPU 사용 여부 (true/false)
USE_GPU=true

# 사용할 GPU 번호 (0,1,2,3 형태로 여러 GPU 지정 가능)
GPU_IDS=0

# 분산 학습 사용 여부 (true/false)
DISTRIBUTED=false

# AMP(Automatic Mixed Precision) 사용 여부 (true/false)
USE_AMP=true

# =====================================
# 모델 저장 설정
# =====================================

# 모델 저장 디렉토리
SAVE_MODEL_DIR=./output/rec_training

# 사전 훈련된 모델 경로 (빈 값이면 처음부터 학습)
PRETRAINED_MODEL=

# 체크포인트 저장 간격 (에폭 단위)
SAVE_EPOCH_STEP=10

# 평가 간격 (에폭 단위)
EVAL_EPOCH_STEP=5

# =====================================
# 데이터 증강 설정
# =====================================

# 데이터 증강 사용 여부 (true/false)
USE_DATA_AUGMENTATION=true

# 이미지 크기 조정
IMAGE_SHAPE=[3, 32, 320]

# =====================================
# 로깅 설정
# =====================================

# 로그 출력 간격 (iteration 단위)
PRINT_BATCH_STEP=10

# VisualDL 로깅 사용 여부 (true/false)
USE_VISUALDL=true

# =====================================
# 고급 설정
# =====================================

# 워커 프로세스 수 (데이터 로딩)
NUM_WORKERS=8

# 최대 문자 길이
MAX_TEXT_LENGTH=25

# 문자 딕셔너리 파일 경로 (빈 값이면 기본값 사용)
CHARACTER_DICT_PATH=

# 공백 문자 사용 여부 (true/false)
USE_SPACE_CHAR=true
